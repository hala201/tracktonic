{
    "name": "tracktonic",
    "displayName": "TrackTonic",
    "description": "vscode productivity monitor",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.97.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "tracktonic.start",
                "title": "start autocommit"
            },
            {
                "command": "tracktonic.stop",
                "title": "stop autocommit"
            }
        ],
        "configuration": {
            "title": "tracktonic",
            "properties": {
                "tracktonic.commitInterval": {
                    "type": "number",
                    "default": 30000,
                    "minimum": 30000,
                    "description": "Interval (in milliseconds) between automatic commits. Default is 30 minutes (1,800,000 ms)."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "npm run check-types && npm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "npm run check-types && npm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/chai": "^5.2.0",
        "@types/fs-extra": "^11.0.4",
        "@types/mocha": "^10.0.10",
        "@types/node": "^22.13.5",
        "@types/sinon": "^17.0.4",
        "@types/vscode": "^1.97.0",
        "@typescript-eslint/eslint-plugin": "^8.26.1",
        "@typescript-eslint/parser": "^8.26.1",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "chai": "^5.2.0",
        "esbuild": "^0.24.2",
        "eslint": "^9.22.0",
        "mocha": "^11.1.0",
        "npm-run-all": "^4.1.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.3",
        "vscode-test": "^1.6.1"
    },
    "dependencies": {
        "@google/generative-ai": "^0.24.0",
        "axios": "^1.8.1",
        "fs-extra": "^11.3.0",
        "nock": "^14.0.1",
        "simple-git": "^3.27.0",
        "sinon": "^19.0.2"
    }
}
